procedure map_enter_p_proc begin
   move_to(self_obj, tile_num_in_direction(self_tile, 5, 1), self_elevation);
   animate_rotation(1);
   reg_anim_begin();
   reg_anim_animate(self_obj, ANIM_fall_back_sf,-1);
   reg_anim_end();

   set_self_invisible
end

